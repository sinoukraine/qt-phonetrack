<?xml version='1.0' encoding='utf-8'?>
<widget 
	id="com.qt.phonetrack" 
	version="1.0.11"
	android-versionCode="30"
    ios-CFBundleVersion="30"
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:cdv="http://cordova.apache.org/ns/1.0"  	
	xmlns:android="http://schemas.android.com/apk/res/android"
	defaultlocale="en-US">
    <!-- 
        ios     id="com.sinopacific.phonetrack"  
        android id="com.qt.phonetrack" 
        -->
    <name>QT PhoneTrack</name>
    <description>
        QT PhoneTrack gps tracking app
    </description>
    <author email="support@phonegap.com" href="http://quiktrak.com.au">
        Quiktrak Global LLC
    </author>
    <content src="index.html" />
    <access origin="*"  allows-arbitrary-loads-for-media='true' allows-arbitrary-loads-in-web-content='true' allows-local-networking='true' />
    <allow-navigation href="http://localhost:8080/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    

    <platform name="android"> 
        <edit-config target="/manifest/application" file="app/src/main/AndroidManifest.xml" mode="merge" >
            <application android:usesCleartextTraffic="true" />
        </edit-config>   
        <!-- background-geolocation -->
       <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" >
           <meta-data
              android:name="com.transistorsoft.locationmanager.license_key"
              android:value="eba7db428e45bcf33e80d416a27ec0255cf8700d8acf04ea07c5e7e1c718bb91" />
       </config-file>
        <!-- /background-geolocation -->	  	       	  	
	</platform>
	<!-- sms plugin -->        
   <!--  <config-file platform="android" target="AndroidManifest.xml" parent="/manifest" mode="add" > 
       <uses-permission android:name="android.permission.SEND_SMS" />            
   </config-file> -->
    <!-- /sms plugin -->

	<platform name="ios">
       <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>You can take a photo of your asset using camera and upload it into the app</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>You can select photo of your asset in your photo library and upload it into the app</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
            <string>Need photo library access to save pictures there</string>
        </edit-config>
        
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>App would like to use your current location to display it on the App. It is secure and private</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>App would like to use your location to display it on the Quiktrak Web platform with your other assets for remote tracking and security. It is secure and private</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>App would like to use your location to display it on the Quiktrak Web platform with your other assets for remote tracking and security. It is secure and private</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSMotionUsageDescription">
            <string>Device motion updates help determine when the device is stationary so the app can save power by turning off location-updates</string>
        </edit-config>
    </platform>

    <platform name="ios">
        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    </platform>


	<preference name="android-build-tool" value="gradle" />
	<preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="deployment-target" value="10.2" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="phonegap-version" value="cli-9.0.0" />    
	          
   
    <platform name="android">
      <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    <platform name="ios">
      <resource-file src="GoogleService-Info.plist" />
    </platform>
    <!-- android -->
    
